@model Fiap.StackOverflow.Web.ViewModels.QuestionViewModel

@{
    ViewData["Title"] = "DoggyOverThrone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Questions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Questions)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Title, "Details", new { id = item.Id })
                    <dl>
                        <dt style="font-size:11px">
                            @foreach (var tag in item.Tags)
                            {
                                var text = tag + " ";
                                @Html.DisplayFor(tagItem => text)
                            }
                        </dt>
                        <dd>
                            By: @Html.DisplayFor(modelItem => item.Author)
                        </dd>
                    </dl>
                </td>
                <td>
                    <dl>
                        <dd style="font-size:11px">
                            18 Repostas
                        </dd>
                        <dd style="font-size:11px">
                            4 Votos
                        </dd>
                        <dd style="font-size:11px">
                            alguma outra coisa
                        </dd>
                    </dl>
                </td>
            </tr>
        }
    </tbody>
</table>
