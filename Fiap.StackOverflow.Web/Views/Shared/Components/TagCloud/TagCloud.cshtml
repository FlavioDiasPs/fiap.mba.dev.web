@model IList<Tuple<string, int, int>>

<link href="~/lib/jqcloud/jqcloud.css" rel="stylesheet" />
<script src="~/lib/jqcloud/jqcloud-1.0.4.min.js"></script>
<script type="text/javascript">
    $(document).ready( function () {

        var word_list = [

            @foreach (var item in Model)
            {
                @Html.Raw("{ text: '" + @item.Item1 + "', weight: " + @item.Item2 + ", link: '" + @Url.Action("QuestionsByTag", "Question", new { id = @item.Item3 }) + "' },");
            }

        ];

        $("#tagcloud").jQCloud(word_list);
    });
</script>
